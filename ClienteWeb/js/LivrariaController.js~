app.controller('LivrariaController', function($scope, $http) {

	$scope.livro = {}; 
	$scope.listaLivros = [];

	$scope.adiciona = function() {		

		$http.post('http://localhost:8080/LivrariaWeb/rest/livros',
		$scope.livro).success(
				function(dados) {    				
					alert(dados);
					$scope.listaLivros.push($scope.livro);
					$scope.livro = {};			
		  		}
		);
	};
	
	
	$scope.lista = function() {		

		$http.get('http://localhost:8080/LivrariaWeb/rest/livros').success(
				function(dados) {					
					$scope.listaLivros = dados;			
		  		}
		);
	};
	
	$scope.lista();

	
});